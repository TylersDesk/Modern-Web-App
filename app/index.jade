                        i.fa.fa-map-marker
                        span.item Locate ATM
                    li 
                        i.fa.fa-dollar
                        span.item Treasury Management


                div.menu-title.menu-padding Chat 
                ul.menu-items
                    li 
                        i.class.fa.fa-comments-o
                        span.item Chat Now
                    

                    
            div.centercolumn
                div.actionbar
                    div.searchbar
                        form
                            div.row
                                div.large-12.columns
                                    div.row.collapse
                                        div.small-10.columns
                                            input(type="text",placeholder="Search")
                                        div.small-2.columns
                                            a.button.postfix 
                                                i.fa.fa-search
                    div.alerts 
                        div.card.green 
                            i.fa.fa-comments-o
                        div.card.blue
                            i.fa.fa-user
                        div.card.red 
                            i.fa.fa-institution

                    div.user
                        div.profilepic Mr. Maynard
